<div class="player">
    <div class="player__left">
        <div class="player__left-scroll">
            <div class="player__playlist-cover">
                <img src="#" alt="" class="player__playlist-cover-img">
            </div>
            <div class="player__toggleplay button-toggleplay button-round"><i class="pause-icon"></i></div>
            <div class="player__song-info">
                <div>
                    <span class="player__playlist-title"></span>
                </div>
                <div>
                    <span class="player__author"></span>
                </div>
            </div>
            <div class="player_progress"></div>
            <ul class="player__playlist">
            </ul>
            <div class="player__utils">
